{%- liquid
  assign aspect_ratio = section.settings.aspect-ratio
  assign bg_color = section.settings.background-color
  assign block_spacing = section.settings.block-spacing
  assign container_width = section.settings.container-width
  assign columns = section.settings.width
  assign heading = section.settings.heading
  assign image_width = section.settings.image-width
  assign light_text = section.settings.light-text
  assign link_text = section.settings.link-text
  assign link_url = section.settings.link-url
  assign mobile_columns = section.settings.mobile-width
  assign spacing_above = section.settings.spacing-above
  assign spacing_below = section.settings.spacing-below
  assign subtitle = section.settings.subtitle
  assign text_alignment = section.settings.text-alignment
  assign enable_slide = section.settings.enable_slide
  assign header_text_exists = true
  if heading == blank and subtitle == blank
    assign header_text_exists = false
  endif

  assign footer_text_exists = true
  if link_text == blank
    assign footer_text_exists = false
  endif

  assign dark_background = false
  if bg_color == 'dark'
    assign dark_background = true
  endif
-%}

  <style>
               .custom--image[data-item]
               {
                 display:block
               }
               .mobile-image{
                 display:none;
               }
                @media only screen and (max-width:767px){
                  .mobile-image{
                 display:block;
               }
                  .pc-image{
                    display:none;
                  }
                }
               .mySwiper{width:100%;overflow: hidden;text-align:left;}
             </style>
{% if enable_slide == true %}
<link rel="stylesheet" href="https://unpkg.com/swiper@8/swiper-bundle.min.css">      
<script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"> </script>
{% endif %}
<div
  class="featured-grid--root"
  data-section-id="{{ section.id }}"
  data-aspect-ratio="{{ aspect_ratio }}"
  data-background-color="{{ bg_color }}"
  data-block-spacing="{{ block_spacing }}"
  data-container="section"
  data-container-width="{{ container_width }}"
  data-dark-background="{{ dark_background }}"
  data-footer-text-exists="{{ footer_text_exists }}"
  data-header-text-exists="{{ header_text_exists }}"
  data-light-text="{{ light_text }}"
  data-mobile-overlay="false"
  data-spacing-above="{{ spacing_above }}"
  data-spacing-below="{{ spacing_below }}"
  data-text-alignment="{{ text_alignment }}"
  data-text-position="bottom"
>
  {%- if header_text_exists -%}
    <div class="featured-grid--header" data-container="block">
      {%- if heading != blank -%}
        <h2 class="featured-grid--heading" data-item="section-heading">
          {{- heading | escape -}}
        </h2>
      {%- endif -%}

      {%- if subtitle != blank -%}
        <h3 class="featured-grid--subtitle" data-item="paragraph">
          {{- subtitle | escape -}}
        </h3>
      {%- endif -%}
    </div>
  {%- endif -%}

  <div class="{% if enable_slide == true %} swiper mySwiper {% else %} featured-grid--body  {% endif %}">
    <div
      class="featured-grid--body--container {% if enable_slide == true %} swiper-wrapper{% endif %}"
    
    >
      {%- for block in section.blocks -%}
        {%- liquid
          assign block_link_url = block.settings.link-url
          assign block_link_text = block.settings.link-text
          assign description = block.settings.description
          assign image = block.settings.image
          assign link_wrapper = false
          assign show_image = block.settings.show-image
          assign title = block.settings.title
          assign mobile_image = block.settings.mobile_image
          if block_link_text == blank and block_link_url != blank and description == blank
            assign link_wrapper = true
          endif
        -%}

        <div
          class="featured-grid--item {% if enable_slide == true %} swiper-slide{% endif %}"
          data-image-enabled="{{ show_image }}"
          {% unless settings.transitions--disabled %}
            data-transition-item="{{ section.id }}"
          {%- endunless -%}
          {{ block.shopify_attributes }}
        >
          {%- if link_wrapper -%}
            <a
              class="featured-grid--item--link-wrapper"
              href="{{ block_link_url }}"
              {%- if title != blank -%}
                aria-label="{{ title }}"
              {%- elsif heading != blank -%}
                aria-label="{{ heading }}"
              {%- else -%}
                aria-label="{{ image.alt }}"
              {%- endif -%}
            >
          {%- endif -%}

          <div class="featured-grid--item--container">
           {%- if show_image -%}
           
  <div
    class="featured-grid--item--image custom--image"
    data-item="image"
    {%- if image_width != 0 -%}
      style="max-width:{{ image_width }}px;"
    {%- endif -%}
  >
    {%- if image -%}
      <div class='pc-image'>{%- render "image", image: image, per_row: columns, mobile_per_row: mobile_columns -%}</div>
      {%- if mobile_image -%}
        <div class="mobile-image">
          {%- render "image", image: mobile_image, per_row: mobile_columns -%}
        </div>
      {%- endif -%}
    {%- else -%}
      {%- render "placeholder", type: "image" -%}
    {%- endif -%}
  </div>
{%- endif -%}


            {%- if title != blank or description != blank or block_link_text != blank -%}
              <div class="featured-grid--item--text-container">
                {%- if title != blank -%}
                  <h3 class="featured-grid--item--title" data-item="block-heading">
                    {{- title | escape -}}
                  </h3>
                {%- endif -%}

                {%- if description != blank -%}
                  <div class="featured-grid--item--description" data-item="rte-content">
                    {{- description -}}
                  </div>
                {%- endif -%}

                {%- if block_link_text != blank -%}
                  <div class="featured-grid--item--link" data-item="block-link">
                    <a
                      class="featured-grid--item--link-container"
                      {% if block_link_url != blank %}
                        href="{{ block_link_url }}"
                      {% endif %}
                    >
                      {{- block_link_text -}}
                    </a>
                  </div>
                {%- endif -%}
              </div>
            {%- endif -%}

            </div>

          {%- if link_wrapper -%}
            </a>
          {%- endif -%}
        </div>

      {%- endfor -%}
    </div>
       <!-- <div class="swiper-pagination"></div> -->
  </div>

  {%- if footer_text_exists -%}
    <div class="featured-grid--footer" data-container="panel">
      <div class="featured-grid--footer--block" data-container="block">
        <a
          class="featured-grid--footer--button"
          data-item="button"
          href="{{ link_url }}"
        >
          <div class="featured-grid--footer--button-container">
            {{- link_text -}}
          </div>
        </a>
      </div>
    </div>
  {%- endif -%}
</div>
{% if enable_slide == true %}
  <script>
    
   var swiper = new Swiper(".mySwiper", {
  slidesPerView: 1.2,
  initialSlide: 0,
  spaceBetween: 10,
  pagination: {
    el: ".swiper-pagination",
    clickable: true,
  },
  breakpoints: {
    640: {
      slidesPerView: 2,
      spaceBetween: 0,
    },
    1100: {
      allowTouchMove: false,
      slidesPerView: {{columns}},
      spaceBetween: 0,
    },
  },
});

  
  </script>
{% endif %}
{% schema %}
{
  "name": "Text columns with images",
  "settings": [
    {
      "type": "header",
      "content": "Layout and Color"
    },
    {
      "id": "background-color",
      "label": "Background color",
      "type": "select",
      "options": [
        { "label": "None", "value": "none" },
        { "label": "Light", "value": "light" },
        { "label": "Dark", "value": "dark" },
        { "label": "Accent 1", "value": "accent-1" },
        { "label": "Accent 2", "value": "accent-2" }
      ],
      "default": "none"
    },
    {
      "id": "light-text",
      "label": "Use light text color",
      "type": "checkbox",
      "default": false
    },
    {
      "id": "enable_slide",
      "label": "enable slide",
      "type": "checkbox",
      "default": false
    },
    {
      "id": "block-spacing",
      "label": "Show spacing between blocks",
      "type": "checkbox",
      "default": true
    },
    {
      "id": "container-width",
      "label": "Maximum width of container",
      "type": "range",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 4
    },
    {
      "id": "spacing-above",
      "label": "Spacing above",
      "type": "checkbox",
      "default": true
    },
    {
      "id": "spacing-below",
      "label": "Spacing below",
      "type": "checkbox",
      "default": true
    },
    {
      "id": "width",
      "label": "Blocks per row",
      "type": "range",
      "min": 2,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "id": "aspect-ratio",
      "label": "Image size",
      "type": "select",
      "options": [
        { "label": "Natural", "value": "natural" },
        { "label": "Square (1:1)", "value": "square" },
        { "label": "Landscape (4:3)", "value": "landscape" },
        { "label": "Portrait (2:3)", "value": "portrait" }
      ],
      "default": "square"
    },
    {
      "id": "image-width",
      "label": "Image width",
      "type": "range",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 0,
      "info": "Set to 0 for auto sizing"
    },
    {
      "id": "mobile-width",
      "label": "Blocks per row for small devices",
      "type": "radio",
      "options": [
        { "value": "1", "label": "1" },
        { "value": "2", "label": "2" }
      ],
      "default": "1"
    },
    {
      "id": "text-alignment",
      "label": "Text alignment",
      "type": "text_alignment",
      "default": "center"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Text columns with images"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subheading"
    },
    {
      "type": "url",
      "id": "link-url",
      "label": "Link"
    },
    {
      "type": "text",
      "id": "link-text",
      "label": "Link text"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Column",
      "settings": [
        {
          "id": "show-image",
          "label": "Show image",
          "type": "checkbox",
          "default": true
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Add a title or tagline"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Explain a set of product features, add illustrations, infographics, logo lists, or link to pages.</p>"
        },
        {
          "type": "url",
          "id": "link-url",
          "label": "Link"
        },
        {
          "id": "link-text",
          "label": "Link text",
          "type": "text",
          "default": "View more"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text columns with images",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["aside"]
  }
}
{% endschema %}